<Page x:Class="DesignGeneratorUI.Views.Pages.ImageViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesignGeneratorUI.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ImageViewerPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="Bold" 
                   Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Основная область -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Поле редактирования промпта с бордером -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="10" 
                    BorderBrush="#CCC" BorderThickness="1">
                <TextBox Text="{Binding Prompt}" FontSize="14" 
                         Background="White" Foreground="#333" BorderThickness="0" 
                         Padding="10" Height="350" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            </Border>

            <!-- Изображение -->
            <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="10" 
                    BorderBrush="#CCC" BorderThickness="1" HorizontalAlignment="Center">
                <Image Source="{Binding ImageSource}" Width="500" Height="350" Stretch="Uniform"/>
            </Border>
        </Grid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="⏭ Следующее" Padding="10" Height="40" Width="150" 
                    Background="#0078D7" Foreground="White" FontWeight="Bold" 
                    Command="{Binding NextImageCommand}" Margin="5"/>

            <Button Content="🔄 Перегенерировать" Padding="10" Height="40" Width="150" 
                    Background="#28A745" Foreground="White" FontWeight="Bold" 
                    Command="{Binding RegenerateCommand}" Margin="5"/>

            <Button Content="✅ Отметить проверенным" Padding="10" Height="40" Width="180"
                    Background="#6C757D" Foreground="White" FontWeight="Bold"
                    Command="{Binding MarkAsReviewedCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
