<Page x:Class="DesignGeneratorUI.Views.Pages.PromptManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesignGeneratorUI.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PromptManagerPage">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Область редактирования -->
        <StackPanel Grid.Column="0" Margin="20">
            <TextBlock Text="Название промпта:" FontWeight="Bold"/>
            <TextBox Text="{Binding EditingPromptName}" Margin="0,5,0,10"/>

            <TextBlock Text="Текст промпта:" FontWeight="Bold"/>
            <TextBox Text="{Binding EditingPromptText}" Margin="0,5,0,10" AcceptsReturn="True" Height="200" TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Отмена" Command="{Binding CancelEditCommand}" Margin="0,0,10,0"/>
                <Button Content="{Binding ConfirmButtonText}" Command="{Binding ConfirmEditCommand}" Margin="0,0,10,0"/>
                <Button Content="Удалить" Command="{Binding DeletePromptCommand}" Foreground="Red"/>
            </StackPanel>
        </StackPanel>

        <!-- Список промптов -->
        <ListBox ItemsSource="{Binding SavedPrompts}" SelectedItem="{Binding SelectedPrompt}" DisplayMemberPath="Name" Grid.Column="1" 
         Background="#F0F0F0" BorderBrush="#CCC" BorderThickness="1"/>
    </Grid>
</Page>
