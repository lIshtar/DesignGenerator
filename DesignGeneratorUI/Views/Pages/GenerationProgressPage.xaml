<Page x:Class="DesignGeneratorUI.Views.Pages.GenerationProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesignGeneratorUI.Views.Pages"
      xmlns:converters="clr-namespace:DesignGeneratorUI.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GenerationProgressPage">
    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Генерация изображений..." FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <ProgressBar Grid.Row="1" Height="30" IsIndeterminate="False"
                     Value="{Binding ProgressValue}" Maximum="{Binding NumberOfImages}"/>

        <TextBlock Grid.Row="1" Text="{Binding ProgressText}" FontSize="14" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <Button Content="🚀 Начать генерацию" Command="{Binding StartGenerationCommand}" Padding="10,5"
                Background="#28A745" Foreground="White" FontWeight="Bold"
                Width="180" Height="40" Cursor="Hand" Margin="10,0,0,0"/>
        <!-- Контейнер для кнопок -->
        <Grid Grid.Row="2" HorizontalAlignment="Center" Margin="10">
            <Button Content="Отмена" Padding="10" Height="40" Width="120"
                    Command="{Binding CancelCommand}"
                    Visibility="{Binding IsGenerationComplete, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

            <Button Content="Перейти к просмотру" Padding="10" Height="40" Width="180"
                    Command="{Binding GoToViewerCommand}"
                    Visibility="{Binding IsGenerationComplete, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</Page>
